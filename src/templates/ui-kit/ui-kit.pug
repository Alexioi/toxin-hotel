include ../../components/layout/layout
include ../../components/logo/logo

block var
  - const withThemeGray = false;

doctype html
html(lang="RU")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="initial-scale=1.0, width=device-width")
    <link rel="apple-touch-icon" sizes="180x180" href="/toxin-hotel/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/toxin-hotel/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/toxin-hotel/favicon-16x16.png">
    <link rel="manifest" href="/toxin-hotel/site.webmanifest">
    <link rel="mask-icon" href="/toxin-hotel/safari-pinned-tab.svg" color="#5bbad5">
    <link rel="shortcut icon" href="/toxin-hotel/favicon.ico">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="msapplication-config" content="/toxin-hotel/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">
    title
      block title
  body
    .ui-kit(class=withThemeGray ? " ui-kit_with-theme-gray" : "")
      +layout
        +layout__header
          .ui-kit__header
            +logo({type: 'logo-icon-only'})
        +layout__main
          block main
        +layout__footer
          .ui-kit__footer
