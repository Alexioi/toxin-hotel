include ../../components/input/input

mixin footer

  -
    var footerComponents = {
      aboutText: 'Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»',
      navs: [
        {
          header: 'навигация',
          items: [
            'О нас', 'Новости', 'Служба поддержки', 'Услуги'
          ]
        },
        {
          header: 'навигация',
          items: [
            'О нас', 'Новости', 'Служба поддержки', 'Услуги'
          ]
        },
        {
          header: 'навигация',
          items: [
            'О нас', 'Новости', 'Служба поддержки', 'Услуги'
          ]
        }
      ],
      subscriptionHeader: 'Подписка',
      subscriptionText: 'Получайте специальные предложения и новости сервиса',
      copyrightText: 'Copyright © 2018 Toxin отель. Все права зачищены.'
    }

  footer.footer
    .footer__container
      .footer__main
        .footer__about
          .footer__logo TOXIN
          p.footer__text= footerComponents.aboutText
        .footer__nav
          each nav in footerComponents.navs
            .footer__nav-item
              span.footer__header= nav.header
              ul.footer__list
                each item in nav.items
                  li.footer__list-item
                    a(href='#').footer__list-link= item
        .footer__subscription
          span.footer__header= footerComponents.subscriptionHeader
          p.footer__text= footerComponents.subscriptionText
          .footer__input
            +input({
              type: 'subscription'
            })
    .footer__sub
      .footer__sub-container
        span.footer__copyright= footerComponents.copyrightText
        .footer__social
          span link
