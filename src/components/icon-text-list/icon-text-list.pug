mixin icon-text-list(options)
  -
    const {
      items = [  
        {img: '', title: '', text: ''},
      ]
    } = options || {}

  ul.icon-text-list
    each item in items
      li.icon-text-list__item
        .icon-text-list__img
          - const svg = require(`!raw-loader!@images/content/${item.img}.svg`).default;
          != svg
        .icon-text-list__content
          h3.icon-text-list__title= item.title
          span.icon-text-list__text= item.text
