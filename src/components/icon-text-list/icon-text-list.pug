mixin icon-text-list(options)
  -
    const {
      items = [  
        {img: "smile", title: "Комфорт", text: "Шумопоглощающие стены"},
        {img: "house", title: "Удобство", text: "Окно в каждой из спален"},
      ]
    } = options || {}


  .icon-text-list
    each item in items
      .icon-text-list__item
        img.icon-text-list__img(
          src=require(`../../components/icon-text-list/img/${item.img}.svg`).default
        )
        .icon-text-list__content
          h3.icon-text-list__title= item.title
          span.icon-text-list__text= item.text
