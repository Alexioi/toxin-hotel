mixin room-info(options)
  -
    const {
      number = 0, 
      isLink = false,
      link = '',
      isLux = false, 
      price = ''
    } = options || {}

    const {
      numberSymbol,
      lux,
      perDay,
    } = require('@components/room-info/data.json')

    const linkTag = `a href=${link} class = "room-info__number-value room-info__number-value_type-link"` 
    const spanTag = `span class="room-info__number-value"`
    const tag = isLink ? linkTag : spanTag

  .room-info
    span.room-info__number
      span.room-info__number-signs= numberSymbol
      #{tag}= number
      if isLux
        span.room-info__lux= lux
    span.room-info__price
      span.room-info__price-number= `${price}â‚½`
      span.room-info__price-text= perDay
