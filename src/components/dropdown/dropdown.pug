include ../dropdown-menu/dropdown-menu
include ../typography/typography
include ../text-field/text-field

mixin dropdown(options)
  -
    const {
      hint = '',
      titleText = '',
      items = [], 
      isOpened = false, 
      variants,
      hasButtons,
      placeholder
    } = options || {}

  .dropdown
    +dropdown-menu({items, isOpened, variants, hasButtons, placeholder})
      +typography({tag: 'h4', text: titleText, hint})
      +text-field({isReadonly: true, type: 'text', isDropdown: true, name: type})
