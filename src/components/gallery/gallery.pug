mixin gallery(options)
  -
    const {
      imgs = [
        {src: '', alt: ''}, 
      ]
    } = options || {}

  .gallery
    .gallery__main-column
      img.gallery__img(
        src=require(`Components/gallery/img/img-${imgs[0].src}.png`)
        alt=imgs[0].alt
      )
    .gallery__sub-column
      img.gallery__img(
        src=require(`Components/gallery/img/img-${imgs[1].src}.png`)
        alt=imgs[1].alt
      )
      img.gallery__img(
        src=require(`Components/gallery/img/img-${imgs[2].src}.png`)
        alt=imgs[2].alt
      )
