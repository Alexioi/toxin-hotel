include ../button/button

mixin calendar-menu(options)
  -
    const {
      isOpened = false
    } = options || {}

    const {buttons} = require('Components/calendar-menu/data.json')

    classes = isOpened ? 'calendar_opened' : '' 

  div.calendar-menu.js-calendar-menu(class=classes)
    .calendar-menu__inputs.js-calendar-menu__inputs
      block
    .calendar-menu__menu.js-calendar-menu__menu
      .calendar-menu__datepicker.js-calendar-menu__datepicker
      .calendar-menu__buttons
        .calendar-menu__button-clear.js-calendar-menu__button-clear
          +button(buttons.clear)
        .calendar-menu__button-apply.js-calendar-menu__button-apply
          +button(buttons.apply)
