include ../button/button

mixin calendar-menu(options)
  -
    const {
      isOpened = false
    } = options || {}

    const {buttons} = require('@components/calendar-menu/data.json')

    classes = isOpened ? 'calendar-menu_opened' : '' 

  .calendar-menu.js-calendar-menu(class=classes)
    .calendar-menu__inputs.js-calendar-menu__inputs
      block
    .calendar-menu__menu.js-calendar-menu__menu
      .calendar-menu__datepicker.js-calendar-menu__datepicker
      .calendar-menu__buttons
        .calendar-menu__clear-button.js-calendar-menu__clear-button
          +button(Object.assign({theme: 'link', type: 'button'}, buttons.clear ))
        .calendar-menu__apply-button.js-calendar-menu__apply-button
          +button(Object.assign({theme: 'link', type: 'button'}, buttons.apply ))
