mixin font-types(options)
  -
    const {
      items = [
        {
          theme: '', 
          sample: '', 
          description: ''
        },
      ] 
    } = options || {}

  .font-types
    each item in items
      -
        const themeClass = `font-types__item_theme-${item.theme}`;
        const classes = [themeClass]

      .font-types__item(class=classes)
        span.font-types__sample= item.sample
        span.font-types__description!= item.description
