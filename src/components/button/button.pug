mixin button(options)
  if !options
    - options = {}
  
  - 
    var tag = ''
    tag += options.isLink ? 'a' : 'button'

    var classes = ''
    classes += options.type ? ' button_' + options.type : 'button_default'
    classes += options.size ? ' button_' + options.size : ''
    classes += options.isHovered ? ' button_hovered' : ''


  #{tag}.button(class=classes href=options.link)
    .button__wrapper 
      span.button__text= options.text
      if options.type === 'long'
        span.button__arrow.material-icons-outlined arrow_forward
        
