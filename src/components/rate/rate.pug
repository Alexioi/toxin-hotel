mixin rate(options)
  -
    const { quantity = 0 } = options || {};
    let i = 0;

  .rate
    while i < 5
      -
        const starType = quantity > i ? 'star' : 'outline-star'
        i += 1

      img.rate__img(
        src=require(`@images/content/${starType}.svg`),
        alt=starType
      )
