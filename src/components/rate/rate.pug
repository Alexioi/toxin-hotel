mixin rate(options)
  - 
    const { quantity = 0 } = options || {};
    let i = 0;
    let starType = '';

  .rate
    while i < 5
      -
        starType = quantity > i ? 'star' : 'star_border'
        i += 1

      img(
        class = 'rate__img'
        src= require('Components/rate/img/' + starType + '.svg')
        alt= starType
      )
