mixin pie-chart(options)
  -
    const {
      votes
    } = options || {}

    const {
      perfectly,
      good,
      satisfactory,
      disappointment
    } = require('@components/pie-chart/data.json')

  .pie-chart
    canvas.pie-chart__diagram.js-pie-chart__diagram(data-votes=votes)
    ul.pie-chart__list
      li.pie-chart__item.pie-chart__item_type_perfectly= perfectly
      li.pie-chart__item.pie-chart__item_type_good= good
      li.pie-chart__item.pie-chart__item_type_satisfactory= satisfactory
      li.pie-chart__item.pie-chart__item_type_disappointment= disappointment
