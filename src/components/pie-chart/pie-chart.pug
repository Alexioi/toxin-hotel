include ../typography/typography

mixin pie-chart(options)
  -
    const {
      votes
    } = options || {}

    const {
      perfectly,
      good,
      satisfactory,
      disappointment
    } = require('@components/pie-chart/data.json')

  .pie-chart
    canvas.pie-chart__diagram.js-pie-chart__diagram(data-votes=votes)
    ul.pie-chart__list
      li.pie-chart__item.pie-chart__item_type_perfectly
        +typography({text: perfectly, variant: 'body', tagMapping: 'span'})
      li.pie-chart__item.pie-chart__item_type_good
        +typography({text: good, variant: 'body', tagMapping: 'span'})
      li.pie-chart__item.pie-chart__item_type_satisfactory
        +typography({text: satisfactory, variant: 'body', tagMapping: 'span'})
      li.pie-chart__item.pie-chart__item_type_disappointment
        +typography({text: disappointment, variant: 'body', tagMapping: 'span'})
