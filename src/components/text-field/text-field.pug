mixin text-field(options)
  -
    const {
      value, 
      name, 
      placeholder, 
      maskedType,
      inputmode,
      isHovered = false, 
      isMasked = false, 
      type = 'text', 
      isSubscription = false,
      isDropdown = false,
      isReadonly = false,
    } = options || {}

    const hoverClass = isHovered && 'text-field_hovered'
    const maskClass = isMasked && 'text-field_masked js-text-field_masked'
    const textDarkClass = isDropdown && 'text-field_text_dark'
    const classes = [hoverClass, maskClass, textDarkClass]

    const inputAttributes = {
      type,
      value,
      name,
      placeholder,
      inputmode,
      'data-masked-type': maskedType,
      readonly: isReadonly,
      tabindex: isReadonly ? '-1' : '0',
    }

    const buttonAttributes = {
      type: 'button',
      tabindex: isReadonly ? '0' : '-1'
    }

  .text-field(class=classes)
    input.text-field__input&attributes(inputAttributes)
    if isSubscription
      button.text-field__subscription-button(type="submit")
        include ../../images/decorative/arrow-forward.svg
    if isDropdown
      button.text-field__dropdown-button&attributes(buttonAttributes)
