include ../calendar-menu/calendar-menu
include ../text-field/text-field
include ../title/title

mixin calendar(options)
  -
    const {
      textFrom = '',
      textTo = '',
      hasTwoInputs = false
    } = options || {}

  .calendar
    +calendar-menu
      if hasTwoInputs
        .calendar__input
          +title({text: textTo, type: 'h4'})
          +text-field({isMasked: true, maskedType:'single', placeholder: 'ДД.ММ.ГГГГ', isDropdown: true})
        .calendar__input
          +title({text: textFrom, type: 'h4'})
          +text-field({isMasked: true, maskedType:'single', placeholder: 'ДД.ММ.ГГГГ', isDropdown: true})
      else
        .calendar__input
          +title({text: textFrom, type: 'h4'})
          +text-field({isMasked: true, maskedType:'double', placeholder: 'ДД.ММ.ГГГГ - ДД.ММ.ГГГГ', isDropdown: true})
