include ../calendar/calendar
include ../title/title
include ../dropdown-field/dropdown-field
include ../dropdown-menu/dropdown-menu
include ../range-slider/range-slider
include ../checkbox-list/checkbox-list
include ../dropdown-list/dropdown-list
include ../toggle/toggle
include ../button/button

mixin filter()
  - 
    const {
      titles,
      dropdownMenus,
      rangeSliders, 
      checkboxLists,
      buttons,
      dropdownLists,
    } = require('Components/filter/data.json')


  .filter.js-filter
    .filter__items
      +calendar
      div
        +title(titles[0])
        +dropdown-field
      .filter__dropdown-menu-guests-wrapper
        +dropdown-menu(dropdownMenus[0])
          +title(titles[1])
          +dropdown-field
      .filter__range-slider-wrapper 
        +range-slider(rangeSliders[0])
        p.filter__range-text Стоимость за сутки пребывания в номере
      .filter__rules-title-wrapper
        +title(titles[2])
      .filter__rules-wrapper
        +checkbox-list(checkboxLists[0])
      .filter__availability-title-wrapper
        +title(titles[3])
      .filter__availability-wrapper
        +checkbox-list(checkboxLists[1])
      .filter__dropdown-menu-rooms-wrapper
        +dropdown-menu(dropdownMenus[1])
          +title(titles[4])
          +dropdown-field
      .filter__dropdown-list-wrapper
        +dropdown-list(dropdownLists[0])
          +checkbox-list(checkboxLists[2])
    .filter__toggle-button.js-filter__toggle-button 
      +button(buttons[0])