include ../title/title

mixin dropdown-list(options)
  -
    const {
      title = '',
      isOpened = false
    } = options || {}

    const openedClass = isOpened && 'dropdown-list_opened'
    const classes = [openedClass]

  .dropdown-list.js-dropdown-list(class=classes)
    .dropdown-list__header
      +title({text: title, type: 'h4'})
      button.dropdown-list__button.js-dropdown-list__button
        include ../../images/decorative/expand-more.svg
    .dropdown-list__menu
      block
