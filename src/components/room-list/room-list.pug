include ../room-card/room-card
include ../pagination/pagination

mixin room-list(options)
  
  -
    var data = require('../../components/room-list/data.json')

  - 
    const {
      items = data.items
    } = options || {}
  
  .room-list
    .room-list__title Номера, которые мы для вас подобрали
    ul.room-list__list 
      each item in items
        li.room-list__item
          +room-card({
            imgs: item.images,
            currentImg: item.currentImg,
            number: item.number,
            link: item.link,
            isLux: item.isLux,
            price: item.price,
            quantity: item.quantity,
            reviews: item.reviews,
          })
    .room-list__pagination 
      +pagination
