include ../text-field/text-field
include ../radio-buttons/radio-buttons
include ../button/button
include ../toggle/toggle
include ../heading/heading
include ../card/card
include ../question-about-authorization/question-about-authorization

mixin registration-card
  -
    const {
      titles,
      textFields,
      button,
      questionAboutAuthentication,
      radioButtons,
      toggle,
    } = require('@components/registration-card/data.json')

  .registration-card
    +card
      form.registration-card__form(method="POST", action="/change-it")
        +heading(Object.assign({variant: "h2"}, titles.registration))
        .registration-card__name
          +text-field(Object.assign({type: 'text', name: 'name'}, textFields.name))
        .registration-card__surname
          +text-field(Object.assign({type: 'text', name: 'surname'}, textFields.surname))
        .registration-card__radio-buttons
          +radio-buttons(radioButtons)
        .registration-card__birthday
          +heading(Object.assign({variant: "h4"}, titles.birthday))
          +text-field(Object.assign({isMasked: true, name: 'birthday', inputmode: 'numeric'}, textFields.birthday))
        .registration-card__email
          +heading(Object.assign({variant: "h4"}, titles.loginData))
          +text-field(Object.assign({type: 'email', name: 'email', inputmode: 'email'}, textFields.email))
        .registration-card__password
          +text-field(Object.assign({type: 'password', name: 'password'}, textFields.password))
        .registration-card__toggle
          +toggle(toggle)
        .registration-card__submit-button
          +button(Object.assign({type: "submit", theme: "long"}, button))
      .registration-card__question-about-authentication
        +question-about-authorization(questionAboutAuthentication)
