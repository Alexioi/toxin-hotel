include ../title/title

mixin checkbox-list(options)
  //- if !options
  //-   - options = {}

  .checkbox-list
    .checkbox-list__header
      +title({text: "Checkbox Buttons"})
      if options.type === "expanded"
    ul.checkbox-list__list 
      each item in options.items 
        li.checkbox-list__item
          label.checkbox-list__label
            input.checkbox-list__input(type="checkbox")
            span.checkbox-list__text= item
            if options.type === "rich"
              p.checkbox-list__sub-text= subText
