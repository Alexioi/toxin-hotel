extends ../../templates/ui-kit/ui-kit

include ../../components/calendar/calendar
include ../../components/room-booking/room-booking
include ../../components/find-room/find-room
include ../../components/room-card/room-card
include ../../components/registration-card/registration-card
include ../../components/authorization/authorization
include ../../components/container/container
include ../../components/wrapper/wrapper
include ../../components/row/row

block var
  -
    var withThemeGray = true

block title
  | Cards

block main
  -
    const {calendars, roomCards} = require('./data.json')

  +container
    +wrapper({paddingTop: 10, paddingBottom: 140})
      +row({gap: 40})
        +wrapper({basis: 380})
          +wrapper({marginBottom: 40})
            +find-room
          +registration-card
        +wrapper({basis: 380})
          +wrapper({marginBottom: 40})
            +room-booking
          +authorization
        +wrapper({basis: 320})
          +wrapper({marginBottom: 40})
            +calendar(calendars[0])
          +wrapper({width: 270})
            +wrapper({marginBottom: 40})
              +room-card(roomCards[0]) 
            +room-card(roomCards[1]) 
