extends ../../templates/ui-kit

include ../../components/input/input
include ../../components/title/title
include ../../components/icon-text-list/icon-text-list
include ../../components/button/button
include ../../components/toggle/toggle
include ../../components/like-button/like-button
include ../../components/comment/comment
include ../../components/bullet-list/bullet-list
include ../../components/rate/rate
include ../../components/checkbox-list/checkbox-list 
include ../../components/radio-buttons/radio-buttons 
include ../../components/date-dropdown/date-dropdown
include ../../components/dropdown/dropdown
include ../../components/pagination/pagination 

block title 
  | Form elements

block main
  +layout__container

    +layout__row

      +layout__column({basis: 320})
        +input({
          titleText: "Text Field",
          hint: "Default",
          value: 'This is pretty awesome'
        })
        +input({
          titleText: "Text Field",
          hint: "Default",
          type: 'dropdown'
        })
        +input({
          titleText: "Text Field",
          hint: "Default",
          type: 'subscription'
        })
        +input({
          titleText: "Text Field",
          hint: "Default",
          type: 'email'
        })
        +date-dropdown

      +layout__column({basis: 320, mr: 72, ml: 126})
        +checkbox-list({
          title: 'Rich Checkbox Buttons',
          items: [
          {text: "Можно курить"},
          {text: "Можно с питомцами", isChecked: true},
          {text: "Можно пригласить гостей (до 10 человек)", isChecked: true},
        ]})
        +radio-buttons
        +toggle
        +toggle({isChecked: true})
        +like-button({counter: 1, isLiked: true})
        +like-button({counter: 1})
        +layout__row
          +layout__column({mr: 20})
            +rate({quantity: 4})
          +rate

      +layout__column({basis: 320})
        +layout__column
          +button({
            text: 'click me'
          })
          +button({
            type: 'link',
            text: 'click me'
          })
          +button({
            isHovered: true,
            type: 'link',
            text: 'click me'
          })
          +button({
            type: 'outline',
            text: 'click me'
          })
          +button({
            type: 'long',
            text: 'click me'
          })
          +button({
            type: 'long',
            size: 'low',
            text: 'click me',
            size: 'low',
          })
        +pagination 

    +layout__row

      +layout__column({basis: 320})
        +dropdown({type: 'rooms'})
        +dropdown({type: 'rooms', counters: [5,4,7], isOpened: true})

      +layout__column({basis: 320, mr: 72, ml: 126})
        +dropdown({type: 'rooms', counters: [5,4,7], isOpened: true})

      +layout__column({basis: 320})
        +dropdown({type: 'rooms', counters: [5,4,7], isOpened: true})

    +layout__row

      +layout__column({basis: 320})
        +checkbox-list({
          title: 'expandable checkbox list',
          type: 'expanded',
          isClosed: true,
          items: [
          {text: "Завтрак"},
          {text: "Письменный стол", isChecked: true},
          {text: "Стул для кормления", isChecked: true},
          {text: "Кроватка", isChecked: true},
          {text: "Телевизор"},
          {text: "Шампунь"},
        ]})
        +checkbox-list({
          title: 'expandable checkbox list',
          type: 'expanded',
          isClosed: false,
          items: [
          {text: "Завтрак"},
          {text: "Письменный стол", isChecked: true},
          {text: "Стул для кормления", isChecked: true},
          {text: "Кроватка", isChecked: true},
          {text: "Телевизор"},
          {text: "Шампунь"},
        ]})

      +layout__column({basis: 320, mr: 72, ml: 126})
        +checkbox-list({
          title: 'Checkbox Buttons',
          type: 'rich',
          items: [
          {text: "Широкий коридор", 
          subText: 'Ширина коридоров в номере не менее 91 см.'},
          {text: "Помощник для инвалидов", 
          subText: 'На 1 этаже вас встретит специалист и проводит до номера.'},
        ]})

      +layout__column({basis: 320})
        +bullet-list({
          items: ['Нельзя с питомцами', 
          'Без вечеринок и мероприятий', 
          'Время прибытия — после 13:00, а выезд до 12:00'],
        })

    +layout__row

      +layout__column({basis: 320, grow: '0'})
        +icon-text-list(
          {items: [  
          {img: "smile", title: "Комфорт", text: "Шумопоглощающие стены"},
          {img: "house", title: "Удобство", text: "Окно в каждой из спален"},
        ]}
        )

      +layout__column({basis: 711, grow: '0'})
        +comment({
          authorName: 'Мурад Сарафанов',
          date: '5 дней назад',
          counter: 12,
          isLiked: true,
          text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
        })
