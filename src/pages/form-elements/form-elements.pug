extends ../../templates/ui-kit/ui-kit

include ../../components/icon-text-list/icon-text-list
include ../../components/button/button
include ../../components/toggle/toggle
include ../../components/like-button/like-button
include ../../components/comment/comment
include ../../components/bullet-list/bullet-list
include ../../components/rate/rate
include ../../components/checkbox-list/checkbox-list
include ../../components/radio-buttons/radio-buttons
include ../../components/pagination/pagination
include ../../components/title/title
include ../../components/text-field/text-field
include ../../components/calendar/calendar
include ../../components/dropdown-field/dropdown-field
include ../../components/dropdown-menu/dropdown-menu
include ../../components/dropdown-list/dropdown-list
include ../../components/range-slider/range-slider

block title
  | Form elements

block main
  - 
    const { 
      titles,
      textFields, 
      checkboxLists, 
      comments, 
      iconTextLists, 
      bulletLists,
      dropdownMenus,
      toggles,
      likeButtons,
      rates,
      buttons,
      dropdownLists,
      rangeSliders,
    } = require('./data.json')

  .form-elements
    
    .form-elements__row
      .form-elements__text-fields-and-buttons-left-column
        +title(titles[0])
        +text-field(textFields[0])
        .form-elements__text-fields-and-buttons-left-wrapper
          +title(titles[1])
          +text-field(textFields[1])
        .form-elements__text-fields-and-buttons-left-wrapper
          +dropdown-menu(dropdownMenus[0])
            +title(titles[2])
            +dropdown-field
        .form-elements__text-fields-and-buttons-left-wrapper
          +title(titles[3])
          +text-field(textFields[2])
        .form-elements__text-fields-and-buttons-left-wrapper
          +calendar  
            div
              +title(titles[4])
              +dropdown-field
            div
              +title(titles[4])
              +dropdown-field
        .form-elements__text-fields-and-buttons-left-wrapper
          +calendar   
            div
              +title(titles[5])
              +dropdown-field    
        .form-elements__text-fields-and-buttons-left-wrapper
          +title(titles[6])
          +text-field(textFields[3])

      .form-elements__text-fields-and-buttons-middle-column
        +title(titles[7])
        .form-elements__text-fields-and-buttons-middle-wrapper
          +checkbox-list(checkboxLists[0])
        .form-elements__text-fields-and-buttons-middle-wrapper
          +title(titles[8])
        .form-elements__text-fields-and-buttons-middle-wrapper
          +radio-buttons
        .form-elements__text-fields-and-buttons-middle-wrapper
          +title(titles[9])
        .form-elements__text-fields-and-buttons-middle-wrapper
          +toggle(toggles[0])
        .form-elements__text-fields-and-buttons-middle-wrapper
          +toggle(toggles[1])
        .form-elements__text-fields-and-buttons-middle-wrapper
          +title(titles[10])
        .form-elements__text-fields-and-buttons-middle-wrapper
          +like-button(likeButtons[0])
          +like-button(likeButtons[1])
        .form-elements__text-fields-and-buttons-middle-wrapper
          +title(titles[11])
        .form-elements__text-fields-and-buttons-middle-wrapper
          +rate(rates[0])
          +rate(rates[1])

      .form-elements__text-fields-and-buttons-right-column
        .form-elements__text-fields-and-buttons-right-wrapper
          +range-slider(rangeSliders[0])
        .form-elements__text-fields-and-buttons-right-wrapper
          +title(titles[12]) 
        .form-elements__text-fields-and-buttons-right-wrapper
          +button(buttons[0])
          +button(buttons[1])
        .form-elements__text-fields-and-buttons-right-wrapper
          +button(buttons[2])
          +button(buttons[3])
        .form-elements__text-fields-and-buttons-right-wrapper
          +button(buttons[4])
          +button(buttons[5])
        .form-elements__text-fields-and-buttons-right-wrapper
          +button(buttons[6])
        .form-elements__text-fields-and-buttons-right-wrapper
          +title(titles[13])
        .form-elements__text-fields-and-buttons-right-wrapper
          +pagination 

    .form-elements__row
      .form-elements__dropdowns-left-column
        +dropdown-menu(dropdownMenus[1])
          +title(titles[14])
          +dropdown-field
        .form-elements__dropdowns-left-wrapper
          +dropdown-menu(dropdownMenus[2])
            +title(titles[15])
            +dropdown-field

      .form-elements__dropdowns-middle-column
        +dropdown-menu(dropdownMenus[3])
          +title(titles[16])
          +dropdown-field

      .form-elements__dropdowns-right-column
        +dropdown-menu(dropdownMenus[4])
          +title(titles[17])
          +dropdown-field

    .form-elements__row
      .form-elements__lists-left-column
        +dropdown-list(dropdownLists[0])
          +checkbox-list(checkboxLists[1])
        .form-elements__list-left-wrapper
          +dropdown-list(dropdownLists[1])
            +checkbox-list(checkboxLists[1])

      .form-elements__lists-middle-column
        +title(titles[18])
        .form-elements__lists-middle-wrapper
          +checkbox-list(checkboxLists[2])

      .form-elements__lists-right-column
        +title(titles[19])
        .form-elements__lists-right-wrapper
          +bullet-list(bulletLists[0])

    .form-elements__row
      .form-elements__text-icon-list-column
        +icon-text-list(iconTextLists[0])

      .form-elements__comment-column
        +comment(comments[0])
