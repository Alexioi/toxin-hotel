extends ../../templates/ui-kit

include ../../components/title/title
include ../../components/icon-text-list/icon-text-list
include ../../components/button/button
include ../../components/toggle/toggle
include ../../components/like-button/like-button
include ../../components/comment/comment
include ../../components/bullet-list/bullet-list
include ../../components/rate/rate
include ../../components/checkbox-list/checkbox-list 
include ../../components/radio-buttons/radio-buttons 
include ../../components/date-dropdown/date-dropdown
include ../../components/dropdown/dropdown
include ../../components/pagination/pagination 
include ../../components/label/label
include ../../components/text-field/text-field

block title 
  | Form elements

block main
  +layout__container

    +layout__row

      +layout__column({basis: 320})
        +text-field({
          title: 'Text Field',
          hint: "Default",
          placeholder: 'Email',
          type: "email"
        })
        +layout__box({mt: 20})
          +text-field({
            isHovered: true,
            title: 'Text Field',
            hint: "Hover / Focus",
            value: "This is pretty awesome",
            placeholder: 'This is pretty awesome',
            type: "text"
          })
        +layout__box({mt: 20})
          +text-field({
            title: 'Text Field',
            hint: "Default",
            placeholder: 'Email',
            type: "email"
          })
        +layout__box({mt: 20})
          +text-field({
            title: 'masked text field',
            isMasked: true
          })
        +layout__box({mt: 40})        
          +date-dropdown()
        +layout__box({mt: 40, width: 266})
          +date-dropdown({type: 'filter'})
        +layout__box({mt: 40, mb: 100, width: 266})
          +text-field({
            title: 'subscription text field',
            placeholder: 'Email',
            type: "email",
            isSubscription: true
          })

      +layout__column({basis: 126})

      +layout__column({basis: 320})
        +checkbox-list({
          title: 'Rich Checkbox Buttons',
          items: [
          {text: "Можно курить"},
          {text: "Можно с питомцами", isChecked: true},
          {text: "Можно пригласить гостей (до 10 человек)", isChecked: true},
        ]})
        +layout__box({mt: 41})
          +label({title: 'Radio Buttons'}) 
        +layout__box({mt: 16})
          +radio-buttons
        +layout__box({mt: 37})
          +label({title: 'Toggle'})
        +layout__box({mt: 16})
          +toggle
        +layout__box({mt: 10})
          +toggle({isChecked: true})
        +layout__box({mt: 40})
          +label({title: 'like button'})
        +layout__box({mt: 16})
          +like-button({counter: 1, isLiked: true})
          +layout__box({ml: 10})
            +like-button({})
        +layout__box({mt: 40})
        +label({title: 'rate button'})
        +layout__box({mt: 16})
          +rate({quantity: 4})
          +layout__box({ml: 20})
            +rate

      +layout__column({basis: 72})

      +layout__column({basis: 320})  
        +label({title: 'pagination'}) 
        +layout__box({mt: 16}) 
          +layout__box({width: 99}) 
            +button
          +layout__box({width: 99, ml: 19}) 
            +button({
              isHovered: true,
            })
        +layout__box({mt: 30}) 
          +layout__box({width: 99}) 
            +button({
              type: 'outline',
            })
          +layout__box({width: 99, ml: 20}) 
            +button({
              type: 'outline',
              isHovered: true,
            })
        +layout__box({mt: 31}) 
          +button({
            type: 'link',
          })
          +layout__box({ml: 20}) 
            +button({
              type: 'link',
              isHovered: true,
            })
        +layout__box({mt: 30}) 
          +button({
            type: 'long',
            text: 'перейти к оплате',
          })
        +layout__box({mt: 40}) 
          +label({title: 'pagination'})
        +layout__box({mt: 16}) 
          +pagination 

    +layout__row

      +layout__column({basis: 266})
        +dropdown({type: 'rooms'})
        +layout__box({mt: 20, mb: 159}) 
          +dropdown({type: 'rooms', counters: [5,4,7], isOpened: true})

      +layout__column({basis: 181})

      +layout__column({basis: 320, mr: 72, ml: 126})
        +dropdown({type: 'rooms', counters: [5,4,7], isOpened: true})
      
      +layout__column({basis: 72})

      +layout__column({basis: 320})
        +dropdown({type: 'rooms', counters: [5,4,7], isOpened: true})

    +layout__row

      +layout__column({basis: 266})
        +checkbox-list({
          title: 'expandable checkbox list',
          type: 'expanded',
          })
        +layout__box({mt: 35, mb: 102})
          +checkbox-list({
            title: 'expandable checkbox list',
            type: 'expanded',
            isOpened: true,
            })

      +layout__column({basis: 181})

      +layout__column({basis: 266})
        +checkbox-list({
          title: 'Checkbox Buttons',
          type: 'rich',
          items: [
          {text: "Широкий коридор", 
          subText: 'Ширина коридоров в номере не менее 91 см.'},
          {text: "Помощник для инвалидов", 
          subText: 'На 1 этаже вас встретит специалист и проводит до номера.'},
        ]})

      +layout__column({basis: 126})

      +layout__column({basis: 292})
        +bullet-list

    +layout__row

      +layout__column({basis: 280, grow: '0'})
        +icon-text-list(
          {items: [  
          {img: "smile", title: "Комфорт", text: "Шумопоглощающие стены"},
          {img: "house", title: "Удобство", text: "Окно в каждой из спален"},
        ]}
        )

      +layout__column({basis: 711, grow: '0'})
        +comment
