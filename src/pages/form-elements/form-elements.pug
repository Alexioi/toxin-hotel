include ../../components/comment/comment
include ../../components/bullet-list/bullet-list
include ../../components/rate/rate
include ../../components/checkbox-list/checkbox-list 
include ../../components/radio-buttons/radio-buttons 

div(style="width: 500px; margin: auto;")
  +radio-buttons
  +checkbox-list({items: [
    "Можно курить",
    "Можно с питомцами",
    "Можно пригласить гостей (до 10 человек)",
  ]})
  +rate({quantity: 4})
  +rate
  +bullet-list({
    items: ['Нельзя с питомцами', 
    'Без вечеринок и мероприятий', 
    'Время прибытия — после 13:00, а выезд до 12:00'],
  })
  +comment({
    authorName: 'Мурад Сарафанов',
    date: '5 дней назад',
    counter: 12,
    isLiked: true,
    text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
  })
  +input({
    titleText: "Text Field",
    hint: "Default"
    })
  +title({text: "test"})
  +icon-text-list(
    {items: [  
    {img: "smile", title: "Комфорт", text: "Шумопоглощающие стены"},
    {img: "house", title: "Удобство", text: "Окно в каждой из спален"},
  ]}
  )
  +button({
    link: '#',
    text: 'CLICK ME'
  })
  +button({
    type: 'link',
    link: '#',
    text: 'CLICK ME'
  })
  +button({
    type: 'outline',
    link: '#',
    text: 'CLICK ME'
  })
  +button({
    type: 'long',
    link: '#',
    text: 'CLICK ME'
  })
  +button({
    link: '#',
    text: 'CLICK ME',
    size: 'low',
  })
  +toggle
  +toggle({isChecked: true})
  +like-button({counter: 1, isLiked: true})
  +like-button({counter: 1})