include ../../components/filter/filter
include ../../components/container/container
include ../../components/row/row
include ../../components/wrapper/wrapper
include ../../components/title/title
include ../../components/pagination/pagination

block title
  | Search room

block main
  +container
    +wrapper({paddingTop: 30})
      +row({justifyContent: 'space-between', mix: 'p-search-room__content'})
        +wrapper({basis: 266, mix: 'p-search-room__filter-wrapper'})
          +filter
        +wrapper({basis: 834})
          +title({text: 'Номера, которые мы для вас подобрали'})
          +wrapper({paddingTop: 21, paddingBottom: 37})
            +room-list
          +wrapper({paddingBottom: 70, paddingLeft: 290, mix: 'p-search-room__pagination'})
            +pagination
